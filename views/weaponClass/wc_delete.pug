extends ../layout


block content
  h1 !{title}: !{wc.title}
  
  if guns.length
  
    p #[strong Delete or update the following guns before attempting to delete this weapon class.]
  
      p #[strong Guns:] 
        ul
          each gun in guns
            li
              a(href=gun.url) !{gun.title}
        

  else
    p Do you really want to delete this attachment?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=wc._id )

      button.btn.btn-secondary(type='submit') Delete