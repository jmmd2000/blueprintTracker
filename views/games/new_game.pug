extends ../layout

block content
  if att
    h1=title +": "+ game.title
  else
    h1=title

  form(method='POST' action='')
    div.form-group
      label(for='game_name') Game Name:
      input#att_name.form-control(type='text', placeholder='Name of game...' name='game_name' required='true' value=(undefined===att ? '' : att.title) )
    button.btn.btn-secondary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
